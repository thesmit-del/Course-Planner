{
    "manifest_version": 3,
    "name": "Email Link Scanner",
    "version": "1.0",
    "permissions": ["scripting", "storage", "activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://mail.google.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle",
        "all_frames": true
      }
    ]
  }
  