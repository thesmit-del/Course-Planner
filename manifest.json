{
    "manifest_version": 3,
    "name": "Cyber Sentinel",
    "version": "1.0",
    "permissions": ["scripting", "storage", "activeTab", "tabs", "storage"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://mail.google.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle",
            "all_frames": true
        }
    ]
}
